@model Turnos.Models.Paciente

<h4>Â¿Seguro que desea eliminar el registro?</h4>

<div>
    <h5>Paciente</h5>
    <div class="row">
        <div class="col s12 m6">
            <div class="card hoverable blue-grey darken-2">

                <div class="card-content white-text">
                    <span class="card-title">
                        <h5>
                            <b> @Html.DisplayFor(model => model.Nombre)
                                @Html.DisplayFor(model => model.Apellido)
                            </b>
                        </h5>
                    </span>
                    <hr />
                    <dl>
                        <dt>
                            @Html.DisplayNameFor(modelo => modelo.Direccion) : @Html.DisplayFor(modelo =>
                            modelo.Direccion)
                        </dt>
                        <dt>
                            @Html.DisplayNameFor(modelo => modelo.Telefono) : @Html.DisplayFor(modelo =>
                            modelo.Telefono)
                        </dt>

                        <dt>
                            @Html.DisplayNameFor(modelo => modelo.Email) : @Html.DisplayFor(modelo => modelo.Email)

                    </dl>

                </div>
                <div class="card-action blue-grey darken-1">

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="IdPaciente" />
                        <input type="submit" value="Eliminar" 
                        class="waves-effect waves-light btn-small blue-grey lighten-2" asp-action="Delete" asp-route-id="@Model.IdPaciente"
                        />
                        <a class="waves-effect waves-light btn-small blue-grey lighten-2 right" asp-action="Index">Volver</a>
                    </form>

                </div>

            </div>

        </div>

    </div>
</div>